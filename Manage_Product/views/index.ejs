<!-- index.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Product Management</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.1/css/bootstrap.min.css">
  <link rel="stylesheet" type="text/css" href="/styles.css">
  <style>
    .product-image {
      max-width: 100px;
      max-height: 100px;
    }

    .table-bordered {
      border: 1px solid #dee2e6;
    }

    .table-bordered th,
    .table-bordered td {
      border: 1px solid #dee2e6;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Product List</h2>
    <a class="btn btn-primary" href="/add">Add Product</a>
    <table class="table table-bordered mt-4">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Product Code</th>
          <th scope="col">Product Name</th>
          <th scope="col">Product Data</th>
          <th scope="col">Product Origin Price</th>
          <th scope="col">Quantity</th>
          <th scope="col">Product Store Code</th>
          <th scope="col">Actions</th>
          <th scope="col">Image</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach((product, index) => { %>
          <tr>
            <th scope="row"><%= index + 1 %></th>
            <td><%= product.productCode %></td>
            <td><%= product.productName %></td>
            <td><%= product.productData %></td>
            <td><%= product.productOriginPrice %></td>
            <td><%= product.quantity %></td>
            <td><%= product.productStoreCode %></td>
            <td>
              <a class="btn btn-secondary" href="/edit/<%= product._id %>">Edit</a>
              <form method="POST" action="/delete/<%= product._id %>" class="delete-form">
                <button class="btn btn-danger" type="submit">Delete</button>
              </form>
            </td>
            <td><img class="product-image" src="/uploads/<%= product.imageUrl %>" alt="<%= product.name %>"></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
  <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
  <script>
    $(document).ready(function() {
      $('.delete-form').on('submit', function(event) {
        event.preventDefault();
        if (confirm('Are you sure you want to delete this product?')) {
          this.submit();
        }
      });
    });
  </script>
</body>
</html>
