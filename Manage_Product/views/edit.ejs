<!-- edit.ejs -->
<!DOCTYPE html>
<html>
<head>
  <title>Edit Product</title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/5.3.1/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <h2>Edit Product</h2>
    <form action="/edit/<%= product._id %>" method="POST" enctype="multipart/form-data">
      <div class="form-group">
        <label for="productCode">ProductCode</label>
        <input class="form-control" type="text" name="productCode" value="<%= product.productCode %>" required>
      </div><div class="form-group">
        <label for="productName">ProductName</label>
        <input class="form-control" type="text" name="productName" value="<%= product.productName %>" required>
      </div>
      <div class="form-group">
        <label for="productData">ProductData</label>
        <input class="form-control" type="text" name="productData" value="<%= product.productData %>" required>
      </div>
      
      <div class="form-group">
        <label for="productOriginPrice">ProductOriginPrice</label>
        <input class="form-control" type="number" name="productOriginPrice" value="<%= product.productOriginPrice %>" required>
      </div>
      <div class="form-group">
        <label for="quantity">Quantity</label>
        <input class="form-control" type="number" name="quantity" value="<%= product.quantity %>" required>
      </div>
      <div class="form-group">
        <label for="productStoreCode">ProductStoreCode</label>
        <input class="form-control" type="text" name="productStoreCode" value="<%= product.productStoreCode %>" required>
      </div>
      <div class="form-group">
        <label for="image">Image</label>
        <input class="form-control" type="file" name="image" accept="image/*">
      </div>
      <button class="btn btn-primary" type="submit">Update Product</button>
    </form>
  </div>
</body>
</html>
