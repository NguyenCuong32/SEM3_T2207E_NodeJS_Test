<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <div><button class="btn btn-primary float-end">Sort DESC</button></div>
    <div class="container-fluid mt-4">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>ProductID</th>
            <th>ProductCode</th>
            <th>ProductName</th>
            <th>ProductData</th>
            <th>ProductOriginPrice</th>
            <th>Quantity</th>
            <th>ProductStoreCode</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach((element,index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= element.ProductCode %></td>
            <td><%= element.ProductName %></td>
            <td><%= element.ProductData %></td>
            <td><%= element.ProductOriginPrice %></td>
            <td><%= element.Quantity %></td>
            <td><%= element.ProductStoreCode %></td>
            <td>
              <a href="/add" class="btn btn-primary">Add</a>
              <a
                href="/delete/<%= element._id %>"
                class="btn btn-danger delete-user"
                >Delete</a
              >
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </body>
</html>
